rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own document during registration
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      request.resource.data.keys().hasAll(['userId', 'firstName', 'lastName', 'email', 'role', 'createdAt']) &&
                      request.resource.data.userId == userId &&
                      request.resource.data.email is string &&
                      request.resource.data.role in ['user', 'admin'];
      
      // Users can update their own document
      allow update: if isOwner(userId);
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Events collection
    match /events/{eventId} {
      // Users can read their own events, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Users can create events for themselves
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['eventId', 'userId', 'name', 'type', 'date', 'createdAt']);
      
      // Users can update their own events
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own events
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Guests collection
    match /guests/{guestId} {
      // Users can read their own guests, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Users can create guests for their own events
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['guestId', 'userId', 'eventId', 'firstName', 'lastName', 'email', 'rsvpStatus', 'createdAt']);
      
      // Users can update their own guests
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own guests
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Users can read their own tasks, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Users can create tasks for their own events
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['taskId', 'userId', 'eventId', 'title', 'status', 'createdAt']);
      
      // Users can update their own tasks
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own tasks
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Budgets collection
    match /budgets/{budgetId} {
      // Users can read their own budgets, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Users can create budgets for their own events
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['budgetId', 'userId', 'eventId', 'totalBudget', 'totalSpent', 'remainingBudget']);
      
      // Users can update their own budgets
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own budgets
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Expenses collection
    match /expenses/{expenseId} {
      // Users can read their own expenses, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Users can create expenses for their own budgets
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['expenseId', 'userId', 'budgetId', 'eventId', 'category', 'amount', 'paidStatus', 'createdAt']);
      
      // Users can update their own expenses
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own expenses
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Settings collection
    match /settings/{userId} {
      // Users can read and write their own settings
      allow read, write: if isOwner(userId);
    }
  }
}
